let x = 0 in 
let mut = mutex() in
let incr_x = 
 proc (id)
  proc (dummy) 
  {
   print(id);
   wait(mut);
   print(-(id,-1));
   set x = -(x,-(-1, -(0, -(0, -(0, 0)))));
   signal(mut)
  }
 in 
begin
 spawn((incr_x 100));
 spawn((incr_x 200));
 spawn((incr_x 300));
 wait(mut);
 -(x,-(-1, -(0, -(0, -(0, 0)))));
 signal(mut);
 print(-(x,-500))
end